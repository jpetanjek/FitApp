<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registracija"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@color/white"
    >

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="365dp"
        android:layout_height="186dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="105dp"
            android:layout_height="105dp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/btn3_background" />
        </FrameLayout>


        <TextView
            android:id="@+id/tvMail"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnMail"
            android:text=""
            android:textSize="17sp" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@+id/linear1"
        android:layout_marginTop="-23dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear2_1"
            android:layout_width="match_parent"
            android:layout_height="143dp"
            android:layout_marginBottom="5pt"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear2_1_1"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginBottom="5pt"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUserInformation"
                    android:layout_width="358dp"
                    android:layout_height="match_parent"
                    android:text="User information"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2_1_2"
                android:layout_width="match_parent"
                android:layout_height="153dp"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linear2_1_2_1"
                    android:layout_width="326dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="17pt"
                    android:layout_marginRight="17pt"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btnGender"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@drawable/btn2_background"
                        android:text="Gender" />


                    <Button
                        android:id="@+id/btnDateOfBirth"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@drawable/btn2_background"
                        android:text="Date Of Birth" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linear2_1_2_2"
                    android:layout_width="326dp"
                    android:layout_height="52dp"
                    android:layout_marginLeft="17pt"
                    android:layout_marginRight="17pt"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btnHeight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@drawable/btn2_background"
                        android:text="Height" />

                    <Button
                        android:id="@+id/btnCurrentWeight"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="4dp"
                        android:layout_weight="1"
                        android:textAllCaps="false"
                        android:background="@drawable/btn2_background"
                        android:text="Current Weight" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/linear2_2"
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linear2_2_1"
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:layout_marginBottom="5pt"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvUsrGoals"
                    android:layout_width="358dp"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text="User goals"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2_2_2"
                android:layout_width="326dp"
                android:layout_height="52dp"
                android:layout_marginLeft="17pt"
                android:layout_marginRight="17pt"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/btnWeightLossOrGainGoal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn2_background"
                    android:text="Weight Loss Or Gain"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/btnGoalWeight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/btn2_background"
                    android:text="Weight Goal"
                    android:textAllCaps="false" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear4"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/linear2"
        android:gravity="center"

        android:layout_marginStart="42dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnRegister"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@drawable/btn2_background"

            android:text="Register"
            android:textAllCaps="false" />
    </LinearLayout>

</RelativeLayout>

